<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.codicefun.blog.mapper.TagMapper">

  <insert id="insert">
    INSERT INTO `tag` (`name`)
    VALUES (#{name})
  </insert>

  <select id="selectById" resultType="tag">
    SELECT *
    FROM `tag`
    WHERE `id` = #{id}
  </select>

  <select id="selectAll" resultType="tag">
    SELECT *
    FROM `tag`
  </select>

  <update id="update">
    UPDATE `tag`
    <set>
      <if test="name != null and name != ''">
        `name` = #{name},
      </if>
    </set>
    WHERE `id` = #{id}
  </update>

  <delete id="delete">
    DELETE
    FROM `tag`
    WHERE `id` = #{id}
  </delete>

</mapper>
